<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="Client">
        <constructor-arg  name="id"       index="0"  type="java.lang.String"  value="2"  />
        <constructor-arg  name="fullName" index="1"  type="java.lang.String"  value="Sam Smith"/>
    </bean>

    <bean id="eventLogger" class="ConsoleEventLogger"/>

    <bean id="app" class="App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="Event" scope="prototype">
        <constructor-arg type="java.lang.Integer" value=""/>
        <constructor-arg type="java.lang.String"  value="set in Setter"/>
        <constructor-arg type="java.lang.String"  value="set in Constructor"/>
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
    </bean>

    <bean id="fileLogger" class="FileEventLogger" init-method="init">
        <constructor-arg  name="fileName"  type="java.lang.String" value="logging"/>
    </bean>

    <bean id="cacheFileLogger" class="CacheFileEventLogger">
        <constructor-arg  name="cacheSize" type="java.lang.Integer" value="1024"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

</beans>

